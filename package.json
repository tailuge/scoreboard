{
  "name": "scoreboard",
  "version": "1.0.0",
  "description": "scoreboard for tailuge/billiards running on vercel.com",
  "scripts": {
    "dev": "next dev --turbo",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:smells": "oxlint src && jscpd src",
    "prettify": "prettier --write --no-error-on-unmatched-pattern --trailing-comma es5 --no-semi {src,public}/**/*.{ts,tsx,html,css} *.json",
    "deps": "npx yarn-check --skip-unused",
    "coverage": "jest --coverage --config src/tests/jest.config.js",
    "test": "jest --config src/tests/jest.config.js",
    "docker:build": "docker buildx build --platform linux/amd64 -f ./src/nchan/Dockerfile -t tailuge/billiards-network ./src/nchan",
    "docker:push": "docker push tailuge/billiards-network",
    "e2e": "playwright test",
    "e2e:headed": "playwright test --headed",
    "e2e:local": "TEST_URL=http://localhost:3001/ playwright test --headed"
  },
  "keywords": [
    "next",
    "vercel.com",
    "billiards",
    "express",
    "llm",
    "kv"
  ],
  "author": "tailuge",
  "license": "GPL-3.0",
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@tailwindcss/postcss": "^4.1.18",
    "@vercel/kv": "3.0.0",
    "@vercel/speed-insights": "^1.3.1",
    "cross-fetch": "^4.1.0",
    "framer-motion": "12.27.1",
    "jsoncrush": "^1.1.8",
    "next": "16.1.4",
    "postcss": "8.5.6",
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  },
  "devDependencies": {
    "@playwright/test": "1.57.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "16.3.2",
    "@types/ioredis-mock": "8.2.6",
    "@types/jest": "30.0.0",
    "@types/react": "19.2.8",
    "eslint": "9.39.2",
    "eslint-config-next": "16.1.4",
    "eslint-plugin-sonarjs": "^3.0.1",
    "ioredis": "5.9.2",
    "ioredis-mock": "8.13.1",
    "jest": "30.2.0",
    "jest-canvas-mock": "^2.5.2",
    "jest-environment-jsdom": "30.2.0",
    "jest-mock-extended": "^4.0.0",
    "jest-transform-stub": "^2.0.0",
    "jscpd": "4.0.7",
    "oxlint": "1.41.0",
    "prettier": "3.8.0",
    "tailwindcss": "^4.1.18",
    "ts-jest": "^29.4.6",
    "typescript": "5.9.3"
  }
}
